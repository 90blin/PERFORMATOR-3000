{
  "name": "performator-3000",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm exec vite -- build",
    "start": "npm exec vite -- preview"
  },
  "dependencies": {
    "framer-motion": "^10.12.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "vite": "^5.0.0"
  },
  "ci": {
    "steps": [
      "npm ci",
      "ls -la node_modules/.bin || true",
      "chmod +x node_modules/.bin/vite || true",
      "npm run build"
    ]
  }
}
